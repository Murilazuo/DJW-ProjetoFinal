function WeaponCooldown()
{
	if(currentHeat>=1 && isShooting = false)
	{
		if(alarm[7]<0)
		{
			alarm[7] = obj_GameManager.reductionFactor;
		}
	}
	if(currentHeat == 0)
	{
		isOverHeated = false;
	}
}